<body>
    {{>navbar}}
    <div class="container">
        <form action="/signup" method="POST" class="signin-form">
            <input type="text" class="username" placeholder="Enter Username">
            <input type="password" class="password" placeholder="Enter Password">
            <button type="submit" class="signin-btn">SIGN UP</button>
        </form>
        <div class="signin">
            <a href="/signin">Already an Existing User? Sign In Instead</a>
        </div>
    </div>


</body>

